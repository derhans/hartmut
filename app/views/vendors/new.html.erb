<h1>Lieferant anlegen</h1>

<%= error_messages_for :vendor %>

<% form_for(@vendor) do |f| %>
  <p>
  <b>Name</b><br />
  <%= f.text_field :name %>
  </p>
  <p>
    <b>Adresse</b><br />
    <%= f.collection_select :address_id, @addresses, :id, :id %> 
  </p>

  <p>
    <%= f.submit "Anlegen" %>
  </p>
<% end %>

<%= link_to 'Back', vendors_path %>
