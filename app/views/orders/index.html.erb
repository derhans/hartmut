<h1>Listing orders</h1>

<table>
  <tr>
    <th>Vendor</th>
    <th>Department</th>
    <th>Hospital</th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.vendor_id %></td>
    <td><%=h order.department.description %></td>
    <td><%=h order.department.hospital.name %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

