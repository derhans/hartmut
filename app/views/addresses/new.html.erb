<h1>New address</h1>

<%= error_messages_for :address %>

<% form_for(@address) do |f| %>
  <p>
    <b>Street</b><br />
    <%= f.text_field :street %>
  </p>

  <p>
    <b>Nr</b><br />
    <%= f.text_field :nr %>
  </p>

  <p>
    <b>Zip</b><br />
    <%= f.text_field :zip %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

  <p>
    <b>City</b><br />
    <%= f.text_field :city %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Tel</b><br />
    <%= f.text_field :tel %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', addresses_path %>
