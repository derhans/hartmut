<h1>Artikel anlegen</h1>

<%= error_messages_for :article %>

<% form_for(@article) do |f| %>
  <p>
    <b>Refnr</b><br />
    <%= f.text_field :refnr %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_field :text %>
  </p>

  <p>
    <b>Preis</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Einheit</b><br />
    <%= f.collection_select :unit_id, @units, :id, :name %>
  </p>

  <p>
    <%= f.submit "Aktualisieren" %>
  </p>
<% end %>

